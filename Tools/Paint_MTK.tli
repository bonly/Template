#pragma warning(disable:4800)
#include "Paint.h"

static Paint* paint = 0;
extern Graphics gpDC;

Paint* instance_paint()
{
  if(0 == paint)
  {
    paint = (Paint*)SafeMalloc(sizeof(Paint));
    return paint;
  }
  return paint;
}

void destory_paint()
{
  if(paint)
    SafeFree ((Paint*)paint);
}

bool Paint::drawImage(Img *pJImage, int iX, int iY, int iAchor)
{
  return gpDC->drawImage(pJImage, iX, iY, iAchor);
}
